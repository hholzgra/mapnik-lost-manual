<?xml version="1.0" encoding="utf-8"?>
<Map background-color='white'>
  <Style name="style">
    <Rule>
      <LineSymbolizer stroke="lightblue" stroke-width="5"/>
      <TextSymbolizer repeat-distance="[repeat-distance]" face-name="DejaVu Sans Book" placement="line">[repeat-distance]</TextSymbolizer>
    </Rule>
  </Style>

  <Layer name="layer">
    <StyleName>style</StyleName>
    <Datasource>
      <Parameter name="type">csv</Parameter>
      <Parameter name="inline">
wkt,repeat-distance
"LINESTRING(10 10,50 20,90 10)",10
"LINESTRING(10 20,50 30,90 20)",20
"LINESTRING(10 30,50 40,90 30)",30
      </Parameter>
    </Datasource>
  </Layer>

</Map>

