<?xml version="1.0" encoding="utf-8"?>
<Map background-color='white'>
  <FileSource name="red">./red-symbols</FileSource>
  <FileSource name="green">./green-symbols</FileSource>
  <FileSource name="blue">./blue-symbols</FileSource>

  <Style name="style">
    <Rule>
      <LinePatternSymbolizer file='steps.svg' base='red'/>
      <PointSymbolizer file='steps.svg' transform='translate(0,5)'/>
      <TextSymbolizer face-name="DejaVu Sans Book" allow-overlap="true" dy="20">[base]</TextSymbolizer>
    </Rule>
  </Style>

  <Layer name="layer">
    <StyleName>style</StyleName>
    <Datasource>
      <Parameter name="type">csv</Parameter>
      <Parameter name="inline">
wkt,base
"LINESTRING(10 10,50 20,90 10)",red
"LINESTRING(10 20,50 30,90 20)",green
"LINESTRING(10 30,50 40,90 30)",blue
      </Parameter>
    </Datasource>
  </Layer>

</Map>

